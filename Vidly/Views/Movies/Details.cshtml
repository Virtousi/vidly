@model Vidly.Models.Movies
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre Type: @Model.GenreType.GenreName</li>
    <li>Release Date: @Model.DateReleased.ToString("dddd,MMMM dd, yyyy")</li>
    <li>Added Date: @Model.DateAdded.ToString("dddd,MMMM dd, yyyy")</li>
    <li>Stocks: @Model.Stocks</li>
</ul>
